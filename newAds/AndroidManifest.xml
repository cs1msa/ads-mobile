<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ath.nik.newAds"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="ath.nik.newAds.MyApplication" >
        <activity
            android:name=".NewAdsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DataDefinition"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ath.nik.newAds.DataDefinition" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".OptionLists"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ath.nik.newAds.OptionLists" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowSelectedFilters"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ath.nik.newAds.ShowSelectedFilters" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name=".AdsList"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ath.nik.newAds.AdsList" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
       
        <activity android:name=".SetPreferences" />
                        
    </application>
</manifest>