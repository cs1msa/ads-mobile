<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ath.nik.newAds"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="7" android:targetSdkVersion="15"/>
	<uses-permission android:name="android.permission.INTERNET"/>
	<uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:name="ath.nik.newAds.MyApplication" >
        <activity
            android:name=".NewAdsActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FilterAction"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ath.nik.newAds.FILTERACTION" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AreaActivityWS"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ath.nik.newAds.AREAACTIVITYWS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CategoryActivityWS"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ath.nik.newAds.CATEGORYACTIVITYWS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ShowFilters"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ath.nik.newAds.SHOWFILTERS" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
         <activity
            android:name=".AdsViewEndlessScroll"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="ath.nik.newAds.ADSVIEWENDLESSSCROLL" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
       
        <activity android:name=".SetPreferences" />
                        
    </application>
</manifest>